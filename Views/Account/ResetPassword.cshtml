@{
    ViewData["Title"] = "Resetear Contraseña";
}

<h2>Resetear Contraseña</h2>

<form asp-action="ResetPassword" method="post">
    <input type="hidden" name="token" value="@ViewBag.Token" />
    <div class="form-group">
        <label>Nueva Contraseña</label>
        <input type="password" name="nuevaContrasena" class="form-control" />
    </div>
    <div class="form-group">
        <label>Confirmar Contraseña</label>
        <input type="password" name="confirmarContrasena" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Resetear Contraseña</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
