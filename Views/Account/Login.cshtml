@model DameChanceSV2.Models.LoginViewModel

@{
    ViewData["Title"] = "Iniciar Sesión";
}

<h2>Iniciar Sesión</h2>

<form asp-action="Login" method="post">
    <div class="form-group">
        <label asp-for="Correo"></label>
        <input asp-for="Correo" class="form-control" />
        <span asp-validation-for="Correo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Contrasena"></label>
        <input asp-for="Contrasena" type="password" class="form-control" />
        <span asp-validation-for="Contrasena" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Iniciar Sesión</button>
</form>

<p>
    <a asp-action="RecuperarContrasena">¿Olvidaste tu contraseña?</a>
</p>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
